<Page x:Class="ShopApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="ShopApp - Login">

    <Grid>
        <Label x:Name="LoginLabel" Content="Login" HorizontalAlignment="Left" Margin="208,287,0,0" VerticalAlignment="Top" Height="54" Width="218" FontSize="20"/>
        <Label x:Name="LoginLabel_Copy" Content="Hasło" HorizontalAlignment="Left" Margin="208,368,0,0" VerticalAlignment="Top" Height="54" Width="218" FontSize="20"/>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Left" Height="54" Margin="431,368,0,0" VerticalAlignment="Top" Width="240" Background="#FFBFBDBD"/>
        <TextBox x:Name="EmailInput" HorizontalAlignment="Left" Height="54" Margin="431,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Background="#FFBFBDBD"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="555,464,0,0" VerticalAlignment="Top" Width="116" Height="38" Click="Button_Click"/>
    </Grid>
</Page>
